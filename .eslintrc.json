{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "max-nested-callbacks": 0,
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "no-var": 2,
        "eol-last": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}